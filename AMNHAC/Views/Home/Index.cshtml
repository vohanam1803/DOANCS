    <script>
        let playY;
        let giuPlayer;

        let giu;
        let check = 0;
        function openVideo(e) {
            var id = e.currentTarget.getAttribute('data-id')
            var name = e.currentTarget.getAttribute('name')

            var PlayBtn = e.currentTarget.getAttribute('set-videoplay')
            var Player = document.getElementById(PlayBtn);

            if (check == 0) {
                if (giu != name) {
                    showNhac(name)
                    showBuyTickets(id)

                    playY = Player.src += 'rel=0&autoplay=1'
                    Player.src = playY;
                    giuPlayer = Player;

                    giu = name;
                    check = 1;
                }
            }
            else {
                hideNhac(giu)

                var PlayerClose = giuPlayer;
                if (PlayerClose == Player) {
                    showNhac(name)
                    showBuyTickets(id)
                    giu = name;
                }
                else {
                    playY = giuPlayer.src.replace('rel=0&autoplay=1', '');
                    giuPlayer.src = playY;

                    showNhac(name)
                    showBuyTickets(id)

                    playY = Player.src += 'rel=0&autoplay=1'
                    Player.src = playY;
                    giuPlayer = Player;

                    giu = name;
                }
            }
        }
        function closeVideo(e) {
            var id = e.currentTarget.getAttribute('id')

            hideBuyTickets(id)
        }
        function closeallVideo(e) {
            var id = e.currentTarget.getAttribute('data-id')

            hideBuyTickets(id)
        }

        function showBuyTickets(id) {
            const modal = document.getElementById(id)
            modal.classList.add('open')
        }
        function hideBuyTickets(id) {
            const modal = document.getElementById(id)
            modal.classList.remove('open')
        }
        function showNhac(name) {
            const Nhac = document.getElementById(name)
            Nhac.classList.add('Nhac')
        }
        function hideNhac(check) {
            const Nhac = document.getElementById(check)
            Nhac.classList.remove('Nhac')
        }
    </script>


